{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "airbnb", "airbnb/hooks", "prettier"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "react/prop-types": 0,
        "require-jsdoc": 0,
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "max-len": ["error", { "code": 100, "ignorePattern": "d=\"([\\s\\S]*?)\"" }],
        "no-param-reassign": ["error", { "props": false }]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
